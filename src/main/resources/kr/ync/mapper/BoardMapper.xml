		SELECT	bno,
				title,
				content,
				writer,
				regdate,
				updatedate,
				replycnt
		FROM	(SELECT /*+INDEX_DESC(tbl_board pk_board) */
        				rownum rn,
        				bno,
        				title,
        				content,
        				writer,
        				regdate,
        				updatedate,
        				replycnt
      			FROM	tbl_board
				WHERE 
  		]]>
		<include refid="criteria"></include> 
      
		<![CDATA[    
      			rownum <= #{pageNum} * #{amount}
      			)
  		WHERE rn > (#{pageNum} -1) * #{amount}   
		]]>
	</select>
	
